# 1.List every order with its customer name and the employee who handled it.
SELECT o.OrderID, o.OrderDate, c.Company AS Customer,
CONCAT(e.FirstName, ' ', e.LastName) AS Employee
FROM Orders o
INNER JOIN Customers c ON o.CustomerID = c.CustomerID
INNER JOIN Employees e ON o.EmployeeID = e.EmployeeID;

# 2. Show each product along with its category and supplier.
SELECT p.ProductName AS Product, cat.CategoryName AS Category, s.SupplierName AS Supplier
FROM Products p
INNER JOIN Categories cat ON p.CategoryID = cat.CategoryID
INNER JOIN Suppliers s ON p.SupplierID = s.SupplierID;

# 3. List order details with product names and the extended line total (Quantity *
SELECT od.OrderID, od.Quantity, p.ProductName AS Product, p.Price AS UnitPrice, (Quantity * Price) AS LineTotal
FROM OrderDetails od
INNER JOIN Products p ON od.ProductID = p.ProductID;

# 4. Show all orders and the shipper country of the customer who placed them.
SELECT o.OrderID, o.OrderDate, c.Company AS Customer, c.Country AS CustomerCountry, s.ShipperName AS Shipper
FROM Orders o
INNER JOIN Customers c ON o.CustomerID = c.CustomerID
INNER JOIN Shippers s ON o.ShipperID = s.ShipperID;

# 5. Find all employees who took orders shipped to Germany.
SELECT DISTINCT e.EmployeeID, e.FirstName, e.LastName, o.OrderID, o.OrderDate, c.Country
FROM Employees e
INNER JOIN Orders o ON e.EmployeeID = o.EmployeeID
INNER JOIN Customers c ON o.CustomerID = c.CustomerID
WHERE c.Country = 'Germany';

# 6. List all customers and any orders they have (including customers with none).
SELECT c.CustomerID, c.Company AS Customer, o.OrderID, o.OrderDate
FROM Customers c
LEFT JOIN Orders o ON c.CustomerID = o.CustomerID;

# 7. Find products that have never been ordered.
SELECT p.ProductID, p.ProductName
FROM Products p
LEFT JOIN OrderDetails od ON p.ProductID = od.ProductID
WHERE od.ProductID IS NULL;

# 8. Show all suppliers and the products they supply (even if some suppliers currently have none).
SELECT s.SupplierID, s.SupplierName, p.ProductName
FROM Suppliers s
LEFT JOIN Products p ON s.SupplierID = p.SupplierID;

# 9. List employees with any orders they have handled, but still show employees with no orders.
SELECT e.EmployeeID, e.FirstName, e.LastName, o.OrderID
FROM Employees e
LEFT JOIN Orders o ON e.EmployeeID = o.EmployeeID;

# 10. Show each category and the products within it, including categories with no products.
SELECT cat.CategoryID, cat.CategoryName, p.ProductName
FROM Categories cat
LEFT JOIN Products p ON cat.CategoryID = p.CategoryID;

# 11. List products and their categories using a RIGHT JOIN.
SELECT p.ProductID, p.ProductName, cat.CategoryName
FROM Categories cat
RIGHT JOIN Products p ON cat.CategoryID = p.CategoryID;

# 12. Show all orders and their customers with a RIGHT JOIN.
SELECT o.OrderID, o.OrderDate, c.Company AS Customer
FROM Customers c
RIGHT JOIN Orders o ON c.CustomerID = o.CustomerID;

# 13. Display suppliers with their products (RIGHT JOIN ensures all products appear).
SELECT p.ProductID, p.ProductName, s.SupplierName
FROM Suppliers s
RIGHT JOIN Products p ON s.SupplierID = p.SupplierID;

# 14. List order details and related products (RIGHT JOIN for demonstration).
SELECT od.OrderID, p.ProductName, od.Quantity
FROM Products p
RIGHT JOIN OrderDetails od ON p.ProductID = od.ProductID;

# 15. Show customers and their orders using RIGHT JOIN (ensures all orders show even if a customer is missing).
SELECT o.OrderID, o.OrderDate, c.Company AS Customer
FROM Customers c
RIGHT JOIN Orders o ON c.CustomerID = o.CustomerID;

# 16. Get all orders with product names and the supplier of each product.
SELECT o.OrderID, o.OrderDate, p.ProductName, s.SupplierName
FROM Orders o
INNER JOIN OrderDetails od ON o.OrderID = od.OrderID
INNER JOIN Products p ON od.ProductID = p.ProductID
INNER JOIN Suppliers s ON p.SupplierID = s.SupplierID;

# *17. Find all products and any matching orders that were shipped to France.
SELECT p.ProductName, o.OrderID, o.OrderDate, c.Country
FROM Products p
LEFT JOIN OrderDetails od ON p.ProductID = od.ProductID
LEFT JOIN Orders o ON od.OrderID = o.OrderID 
LEFT JOIN Customers c ON o.CustomerID = c.CustomerID 
WHERE c.Country = 'France';

# 18. List employees along with the products they have sold.
SELECT DISTINCT e.EmployeeID, e.FirstName, e.LastName, p.ProductName AS ProductSold
FROM Employees e
INNER JOIN Orders o ON e.EmployeeID = o.EmployeeID
INNER JOIN OrderDetails od ON o.OrderID = od.OrderID
INNER JOIN Products p ON od.ProductID = p.ProductID;

# 19. Show all customers and any products they have ever ordered.
SELECT DISTINCT c.CustomerID, c.Company AS Customer, p.ProductName AS ProductOrdered
FROM Customers c
LEFT JOIN Orders o ON c.CustomerID = o.CustomerID
LEFT JOIN OrderDetails od ON o.OrderID = od.OrderID
LEFT JOIN Products p ON od.ProductID = p.ProductID;

# 20. Display all products with their supplierâ€™s name and any order IDs in which they appear.
SELECT p.ProductID, p.ProductName, s.SupplierName AS Supplier, od.OrderID
FROM Products p
LEFT JOIN Suppliers s ON p.SupplierID = s.SupplierID
LEFT JOIN OrderDetails od ON p.ProductID = od.ProductID;



